<div style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path 'form.jpg' %>);
  height: 85vh;">
  <div class="container d-flex justify-content-center pt-5">
    <div class="form-difuse w-50">

      <h2>Iniciar sesión</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      label: "Email",
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      label: "Contraseña",
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean, label: "Recuerdame" if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Iniciar sesión", class: "banner-button w-100" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
