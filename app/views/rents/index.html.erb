<div class="container mt-5">
  <h1 class="mb-4">Mis rentas</h1>

  <div class="row">
    <% @rents.each do |rent| %>
      <div class="col-4">
        <%= link_to rent_path(rent), class: "text-decoration-none text-black" do %>
          <div class="mb-4 p-2 card-vehicle">
            <% if rent.vehicle.photos.attached? %>
              <%= cl_image_tag rent.vehicle.photos[0].key, class: "w-100 object-fit-cover", height:150 %>
            <% else %>
              <%= image_tag "https://th.bing.com/th/id/OIP.FxJBZ-aCHvFKtvK1IqbH8wHaEU?rs=1&pid=ImgDetMain", height: 150, class: "w-100 object-fit-cover" %>
            <% end %>
            <!-- Rest of your card content -->
            <div class="px-3 pt-3">
              <div class="">
                <h3 class="fs-5 fw-bold text-truncate text-white"><%= "#{rent.vehicle.make} #{rent.vehicle.model}" %></h3>
                <p class="p-0 m-0"><span class="text-secondary">Tipo de vehículo:</span> <span class="text-white"><%= rent.vehicle.vehicle_type.capitalize %></span></p>
                <p class="text-secondary p-0 m-0">Precio por día: <span class="text-white">$<%= rent.vehicle.price %></span></p>
                <p class="text-white"><i class="fa-solid fa-user user-icon text-white"></i> <%= rent.vehicle.user.nickname %></p>
              </div>
              <div class="d-flex justify-content-between mt-2">
                <p class="m-0 fs-5 text-white"><span class="fw-bold text-white">$<%= rent.price %></span> por día</p>
                <div class="d-flex">
                  <%= link_to "Ver Detalles", rent, class: "btn btn-sm btn-info rounded-pill me-2" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
