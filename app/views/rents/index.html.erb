<div class="container mt-5">
  <h1 class="mb-4">Mis rentas</h1>

  <div class="list-group">
    <% @rents.each do |rent| %>
      <div class="list-group-item list-group-item-action">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1"><%= "#{rent.vehicle.make} #{rent.vehicle.model}" %></h5>
          <small><%= rent.start_date %> to <%= rent.end_date %></small>
        </div>
        <p class="mb-1">
          <strong>User:</strong> <%= rent.user.nickname %> |
          <strong>Price:</strong> $<%= rent.price %>
        </p>
        <div class="d-flex justify-content-end">
          <%= link_to "View Details", rent, class: "btn btn-sm btn-outline-primary me-2" %>
          <%= link_to "Edit", edit_rent_path(rent), class: "btn btn-sm btn-outline-secondary me-2" %>
          <%= link_to "Delete", rent, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
