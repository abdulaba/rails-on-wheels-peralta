<div class="container mt-5">
  <div class="card-rents">
    <div class="row g-0">
      <div class="col-md-6">
        <%= cl_image_tag @vehicle.photos[0].key, class: "card-img-top h-100", alt: "Vehicle Image" %>
      </div>
      <div class="col-md-6">
        <div class="card-body">
          <div class="mb-3">
            <h3 class="card-title fw-bold mb-4">Rentar <%= @vehicle.make %> <%= @vehicle.model %> <%= @vehicle.year %></h3>

            <p class="fs-6 fw-bold">Información del vehículo:</p>
            <p class="fs-6 text">Make: <%= @vehicle.make %></p>
            <p class="fs-6 text">Model: <%= @vehicle.model %></p>
            <p class="fs-6 text">Year: <%= @vehicle.year %></p>
          </div>

          <%= form_with(model: [@vehicle, @rent], method: :post, local: true) do |form| %>
            <div class="mb-3">
  <%= form.label :start_date, "Fecha de inicio", class: 'form-label fs-6 text-secondary' %>
  <%= form.date_field :start_date, class: 'form-control form-control-sm', placeholder: 'Selecciona la fecha de inicio', min: Date.current.to_s %>
</div>

<div class="mb-3">
  <%= form.label :end_date, "Fecha de fin", class: 'form-label fs-6 text-secondary' %>
  <%= form.date_field :end_date, class: 'form-control form-control-sm', placeholder: 'Selecciona la fecha de fin', min: @rent&.start_date.to_s, onChange: 'validateEndDate()' %>
</div>

<div class="button-new">
  <%= form.submit "Rentar", class: "btn btn-primary btn-sm rounded-pill w-100" %>
</div>
<% end %>
