<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "On Wheels", root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <%= form_with url: vehicles_path, method: :get do |f| %>
      <div class="input-group">
        <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "¿Buscas un vehículo?" %>
        <%= f.submit "Buscar", class: "input-group-text" %>
      </div>
    <% end %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Vehículos", vehicles_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: {bs_toggle: "dropdown"}%>
            <% else %>
              <div class="noavatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown">
              .
              </div>
            <% end %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Perfil", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Mis vehículos", my_vehicles_vehicles_path, class: "dropdown-item" %>
              <%= link_to "Mis rentas", rents_path, class: "dropdown-item" %>
              <%= link_to "Cerrar sesión", destroy_user_session_path, class:"dropdown-item", data: {turbo_method: :delete} %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Vehículos", vehicles_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Iniciar sesión", new_user_session_path, class:"nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
