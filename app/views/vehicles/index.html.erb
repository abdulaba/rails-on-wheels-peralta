<div class="container mt-3 mb-5">
  <div class="row">
    <div class="col-3">
      <h3>Filter</h3>
      <%= form_with url: vehicles_path, method: :get do |f|%>
        <%= text_field_tag :query, params[:query], class: "d-none", value: params[:query] if params[:query].present? %>
        <%= label_tag "min price" %>
        <%= number_field_tag :min, params[:min]%>
        <%= label_tag "max price" %>
        <%= number_field_tag :max, params[:max]%>
        <%= submit_tag "buscar", class: "banner-button w-75 mt-2" %>
      <% end %>
    </div>
    <div class="row col-9 d-flex">
      <% @vehicles.each do |vehicle| %>
        <div class="col-4">
            <%= render "vehicle_card", vehicle: vehicle%>
        </div>
      <% end %>
    </div>
  </div>
</div>
